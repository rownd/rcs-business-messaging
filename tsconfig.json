{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["./src/**/*", "src/**/*.json"],
  "exclude": ["./test/**/*", "./build/**/*", "./*.js", "node_modules"]
}
